{
    "name": "bmitch/churn-php",
    "description": "Discover files in need of refactoring.",
    "license": "MIT",
    "keywords": [
        "bmitch",
        "churn-php"
    ],
    "authors": [
        {
            "name": "Bill Mitchell",
            "email": "wkmitch@gmail.com"
        }
    ],
    "homepage": "https://github.com/bmitch/churn-php",
    "require": {
        "php": ">=7.1.3",
        "composer/package-versions-deprecated": "^1.11",
        "symfony/console": "^3.4 || ^4.0 || ^5.0 || ^6.0",
        "symfony/filesystem": "^3.4 || ^4.0 || ^5.0 || ^6.0",
        "symfony/process": "^3.4 || ^4.0 || ^5.0 || ^6.0",
        "symfony/yaml": "^3.4 || ^4.0 || ^5.0 || ^6.0",
        "webmozart/assert": "^1.2"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.4",
        "bmitch/codor": "^1.2",
        "mockery/mockery": "^1.2.0",
        "slevomat/coding-standard": "^7.0",
        "symfony/phpunit-bridge": "^5.1 || ^6.0"
    },
    "autoload": {
        "psr-4": {
            "Churn\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Churn\\Tests\\": "tests"
        }
    },
    "bin": [
        "bin/churn"
    ],
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "@composer bin all install --ansi"
        ],
        "post-update-cmd": [
            "@composer bin all update --ansi"
        ],
        "bin": "echo 'bin not installed'",
        "fix": [
            "phpcbf --runtime-set php_version 70103 --standard=psr12 src -spn || true",
            "phpcbf --runtime-set php_version 70103 --standard=phpcs.xml src -spn || true",
            "phpcbf --runtime-set php_version 70103 --standard=codor.xml src -spn || true"
        ],
        "test": [
            "@composer validate --strict",
            "parallel-lint src tests",
            "phpmd src text phpmd.xml",
            "phploc src",
            "phpcpd src",
            "psalm",
            "simple-phpunit --colors=always --testdox --testsuite churn-tests --coverage-clover=coverage.xml",
            "@php bin/churn run src -p -vvv",
            "phpcs --runtime-set php_version 70103 --standard=psr12 src -spn",
            "phpcs --runtime-set php_version 70103 --standard=phpcs.xml src -spn",
            "phpcs --runtime-set php_version 70103 --standard=codor.xml src -spn"
        ]
    }
}
