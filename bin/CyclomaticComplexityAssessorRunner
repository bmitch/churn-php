#!/usr/bin/env php
<?php

require_once __DIR__ . '/bootstrap.php';

use Churn\Assessor\CyclomaticComplexityAssessor;

$file = $argv[1];
$contents = \file_get_contents($file);
if ($contents === false) {
    echo 0;
    return;
}

$assessor = new CyclomaticComplexityAssessor();
echo $assessor->assess($contents);
